{
  "name": "@agencebio/cartobio-front",
  "version": "2.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:webcomponent": "vite build --config vite.notification-webcomponent.config.js",
    "build:webcomponent-lib": "npm run build:webcomponent -- --mode lib",
    "postbuild": "npm run build:webcomponent && npm run build:webcomponent-lib",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest run",
    "posttest": "eslint ./src"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "dependencies": {
    "@agencebio/rosetta-cultures": "^1.1.2",
    "@gouvfr/dsfr": "^1.8.1",
    "@sentry/vue": "^7.46.0",
    "@turf/area": "^6.5.0",
    "@turf/bbox": "^6.5.0",
    "@turf/centroid": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@unhead/vue": "^1.0.6",
    "@vueuse/core": "^9.6.0",
    "array.prototype.groupby": "^1.0.0",
    "axios": "^1.1.3",
    "deepmerge": "^4.2.2",
    "maplibre-gl": "^2.0.1",
    "pinia": "^2.0.26",
    "vue": "^3.2.25",
    "vue-matomo": "^4.1.0",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@sentry/vite-plugin": "^0.4.0",
    "@testing-library/vue": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.6.0",
    "eslint-plugin-vue": "^9.6.0",
    "postcss-preset-env": "^7.2.3",
    "typescript": "^4.5.5",
    "vite": "^4.0.0",
    "vite-plugin-pages": "^0.29.0",
    "vitest": "^0.25.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/base",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "vue/multi-word-component-names": "off",
      "vue/no-mutating-props": "warn",
      "vue/no-multiple-template-root": "off",
      "vue/script-setup-uses-vars": "error"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {
        "features": {
          "gap-properties": 1,
          "nesting-rules": true
        }
      },
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
