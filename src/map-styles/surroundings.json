{
  "sources": {
    "rpg-anon": {
      "type": "vector",
      "scheme": "xyz",
      "tiles": [
        "https://cartobio.org/tiles/rpg-2020/{z}/{x}/{y}.pbf"
      ]
    }
  },
  "layers": [
    {
      "id": "rpg-anon-2020-fill",
      "type": "fill",
      "source": "rpg-anon",
