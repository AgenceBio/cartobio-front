      "minzoom": 8,
      "maxzoom": 24,
      "paint": {
        "fill-color": [
          "match",
          ["to-string", ["get", "CODE_CULTU"]],
          ["VRC", "CZH", "CZP", "PTC", "PTF", "BTN", "BTH", "BTP", "MPC", "ORH", "ORP", "TTH", "TTP", "MIS", "TRN"],
          "#EB5757",
          ["J5M", "J6S", "J6P", "JNO", "PRL", "PPH", "SPL", "SPH", "BOP", "CAE", "CEE", "ROS"],
          "#F2C94C",
          "#F2994A"
        ],
        "fill-opacity": 0.7
      }
    },
    {
      "id": "rpg-anon-2020-border",
      "type": "line",
      "source": "rpg-anon",
      "source-layer": "rpg2020",
      "minzoom": 8,
      "maxzoom": 24,
      "paint": {
        "line-color": "#B39DDB",
        "line-opacity": 0.9,
        "line-width": {
          "stops": [[9, 0], [12, 1]]
